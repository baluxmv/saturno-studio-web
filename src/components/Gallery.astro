---
interface Props {
  instagramHandle?: string;
}

const { instagramHandle = 'saturno.studio_' } = Astro.props;

const galleryItems = [
  { title: 'Nail Art Premium', subtitle: 'Disenos exclusivos', label: 'Nail Art Destacado', featured: true },
  { title: 'Manicure Clasico', subtitle: 'Elegancia atemporal', label: 'Manicure', featured: false },
  { title: 'Unas de Gel', subtitle: 'Brillo perfecto', label: 'Gel', featured: false },
  { title: 'Acrilicas', subtitle: 'Esculpido profesional', label: 'Acrilico', featured: false },
  { title: 'Tendencias 2024', subtitle: 'Lo ultimo en estilos', label: 'Tendencias', featured: false },
];
---

<section class="py-28 bg-cream" id="galeria">
  <div class="container">
    <div class="section-header reveal">
      <span class="section-label">Nuestro Trabajo</span>
      <h2 class="section-title">Galeria de Estilos</h2>
      <p class="section-subtitle">Cada diseno es unico, creado con pasion y dedicacion para resaltar tu belleza</p>
    </div>

    <div class="gallery-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
      {galleryItems.map((item, index) => (
        <div
          class={`gallery-item relative rounded-2xl overflow-hidden cursor-pointer bg-gradient-to-br from-pink-light to-pink-soft reveal ${item.featured ? 'sm:col-span-2 sm:row-span-2 min-h-[280px] lg:min-h-[580px]' : 'min-h-[280px]'} ${index > 0 ? `reveal-delay-${index % 4 + 1}` : ''}`}
        >
          <div class="gallery-placeholder w-full h-full flex flex-col items-center justify-center gap-3 text-rose-gold transition-transform duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
            </svg>
            <span class="text-xs font-medium tracking-wider uppercase opacity-80">{item.label}</span>
          </div>
          <div class="gallery-overlay absolute bottom-0 left-0 right-0 p-8 z-10 translate-y-5 opacity-0 transition-all duration-400">
            <h4 class="text-white text-xl mb-1 font-serif">{item.title}</h4>
            <p class="text-white/80 text-sm">{item.subtitle}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-16 reveal">
      <p class="text-text-light mb-5">Descubre mas de nuestro trabajo en Instagram</p>
      <a href={`https://www.instagram.com/${instagramHandle}/`} class="instagram-link inline-flex items-center gap-3 text-rose-gold no-underline font-medium text-[0.9rem] tracking-wide transition-all duration-300 hover:gap-5" target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
        </svg>
        Seguir @{instagramHandle}
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .gallery-item::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-t from-[rgba(61,44,46,0.6)] to-transparent opacity-0 transition-opacity duration-400 z-[2];
  }

  .gallery-item:hover::before {
    @apply opacity-100;
  }

  .gallery-item:hover .gallery-placeholder {
    @apply scale-105;
  }

  .gallery-item:hover .gallery-overlay {
    @apply translate-y-0 opacity-100;
  }
</style>
