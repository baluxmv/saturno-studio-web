---
interface Props {
  instagramHandle?: string;
}

const { instagramHandle = 'saturno.studio_' } = Astro.props;

const services = [
  {
    icon: 'sparkles',
    title: 'Manicure',
    description: 'Manicure tradicional, semipermanente y gel. Cuidado completo para unas perfectas y saludables.',
  },
  {
    icon: 'heart',
    title: 'Pedicure',
    description: 'Tratamiento completo de pies con exfoliacion, hidratacion y esmaltado a tu eleccion.',
  },
  {
    icon: 'brush',
    title: 'Nail Art',
    description: 'Disenos personalizados y creativos. Desde lo clasico hasta las tendencias mas actuales.',
  },
  {
    icon: 'sun',
    title: 'Unas Acrilicas',
    description: 'Extension y esculpido profesional. Unas resistentes con acabado natural o glamoroso.',
  },
  {
    icon: 'smile',
    title: 'Unas de Gel',
    description: 'Sistema de gel para unas flexibles y duraderas con brillo espejo impecable.',
  },
  {
    icon: 'flask',
    title: 'Spa de Manos',
    description: 'Tratamiento hidratante y rejuvenecedor. Parafina, masajes y cuidado intensivo.',
  },
];

const icons: Record<string, string> = {
  sparkles: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456z"/>`,
